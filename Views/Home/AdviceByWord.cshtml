@model SolomonsAdviceWebApp.Models.Entities.Advice

@{
    ViewData["Title"] = "Search for Advice";
}

<div class="search-container">
    <h1 class="search-title">Search for Advice</h1>
    <h4 class="search-subtitle">Type specific words or phrases to find relevant advice.</h4>
    <hr />

    <div class="search-form">
        <form asp-action="AdviceOnCard" method="post">
            <div class="form-group">
                <input type="text" class="form-control search-input" name="text" placeholder="Enter keywords..." />
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-search" />
            </div>
        </form>
    </div>

    <div class="back-to-home">
        <a asp-action="Index" class="btn btn-back">Back to home</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}